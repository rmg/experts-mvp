<h3>Home</h3>

<% if user_signed_in? %>
  <%= render partial: 'users/update_status_form', locals: {user: current_user} %>
<% end %>

<% @users.each do |user| %>
  <div class="row">
    <div class="span2">
      <%=link_to user.name, user %>
    </div>
    <div class="span1">
      <%= status_badge user.status %>
    </div>
  </div>
<% end %>